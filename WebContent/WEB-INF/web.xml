<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
  <display-name>Computer Database</display-name>
  <servlet>
    <servlet-name>DashboardServlet</servlet-name>
    <servlet-class>main.java.com.excilys.computerdatabase.controller.DashboardServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  
    <servlet>
    <servlet-name>EditComputerServlet</servlet-name>
    <servlet-class>main.java.com.excilys.computerdatabase.controller.EditComputerServlet</servlet-class>
    <load-on-startup>2</load-on-startup>
  </servlet>
  
    <servlet>
    <servlet-name>AddComputerServlet</servlet-name>
    <servlet-class>main.java.com.excilys.computerdatabase.controller.AddComputerServlet</servlet-class>
    <load-on-startup>4</load-on-startup>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.css</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.js</url-pattern>
  </servlet-mapping>
  <error-page>
    <error-code>403</error-code>
    <location>/ExceptionHandler</location>
  </error-page>
  <error-page>
    <error-code>404</error-code>
    <location>/ExceptionHandler</location>
  </error-page>
  <error-page>
    <error-code>500</error-code>
    <location>/ExceptionHandler</location>
  </error-page>
</web-app>